{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@": ["./src"],
            "@/*": ["./src/*"]
        },
        "module": "esnext",
        "target": "esnext",
        "esModuleInterop": true,
        "types": ["node", "vite/client"]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte",
        ".routify/**.js"
    ]
}
